@{
    Layout = null;
}
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>ClaimsApp</title>
    <meta name="viewport" content="width=device-width" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.1/dist/css/bootstrap.min.css" rel="stylesheet" />
    <style>
        body { padding: 2rem; background: #f7f7f9; }
        .card { border-radius: 12px;}
        .status-badge { padding: .35rem .65rem; border-radius: 8px; color: #fff; font-weight:600; }
        .status-Pending { background:#f6a623; }
        .status-Approved { background:#2ecc71; }
        .status-Rejected { background:#e74c3c; }
    </style>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/microsoft-signalr/7.0.7/signalr.min.js"></script>
</head>
<body>
    <div class="container">
        <h1 class="mb-4">Claims Management</h1>
        @RenderBody()
    </div>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.1/dist/js/bootstrap.bundle.min.js"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>

